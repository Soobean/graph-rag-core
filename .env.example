# ============================================
# Neo4j
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# ============================================
# Azure OpenAI
# ============================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-10-21

# Model deployments
LIGHT_MODEL_DEPLOYMENT=gpt-4o-mini
HEAVY_MODEL_DEPLOYMENT=gpt-4o
EMBEDDING_MODEL_DEPLOYMENT=text-embedding-3-small

# ============================================
# Application
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ============================================
# Authentication (disabled by default)
# ============================================
AUTH_ENABLED=false
JWT_SECRET_KEY=dev-insecure-secret-key-change-in-production

# ============================================
# Vector Search
# ============================================
VECTOR_SEARCH_ENABLED=true
VECTOR_SIMILARITY_THRESHOLD=0.93
QUERY_CACHE_TTL_HOURS=24

# ============================================
# Graph Edit
# ============================================
GRAPH_EDIT_ENABLED=true
